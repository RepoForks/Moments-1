<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ooo.oxo.moments">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".InstaApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="ooo.oxo.moments.net.OkHttpGlideModule"
            android:value="GlideModule" />

        <meta-data
            android:name="ooo.oxo.moments.net.CandidateGlideModule"
            android:value="GlideModule" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/LoginTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="insta-login" />
            </intent-filter>

        </activity>

        <activity
            android:name=".ProxyActivity"
            android:label="@string/proxy"
            android:theme="@style/LoginTheme" />

        <activity android:name=".MainActivity" />

        <activity
            android:name=".user.UserActivity"
            android:theme="@style/UserTheme" />

        <activity
            android:name=".friendship.FriendshipActivity"
            android:theme="@style/UserTheme" />

    </application>

</manifest>
